<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    
    <changeSet id="change credits" author="marvint">
        <addColumn tableName="credit">
            <column name="month_pay" type="float8"/>
        </addColumn>
    </changeSet>

    <changeSet id="change user" author="marvint">
        <renameTable oldTableName="user" newTableName="users"></renameTable>
    </changeSet>

    <changeSet id="chande password" author="marvint">
        <modifyDataType tableName="users" columnName="password" newDataType="varchar(100)"></modifyDataType>
    </changeSet>

</databaseChangeLog>